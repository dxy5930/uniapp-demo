<view class="container"><view data-event-opts="{{[['tap',[['',['$event']]]]]}}" class="main" catchtap="__e"><view class="header"><image class="bg1" src="../assets/bg1.png"></image><image class="bg2" src="../assets/bg2.png"></image><view class="version-title">{{updateParams.title}}</view><block wx:if="{{updateParams.versionName}}"><view class="version-name">{{"V"+updateParams.versionName}}</view></block></view><view class="title">更新内容:</view><scroll-view class="content" scroll-y="{{true}}" data-event-opts="{{[['touchmove',[['',['$event']]]]]}}" catchtouchmove="__e">{{sanitizedContent}}</scroll-view><block wx:if="{{downloading}}"><view class="progress"><view class="slider"><view class="active-slider" style="{{'width:'+(progress+'%')+';'}}"><view class="bar"></view><view class="dot"><view class="text">{{progress+"%"}}</view><view class="circle"></view></view></view></view></view></block><view data-event-opts="{{[['tap',[['handleButton',['$event']]]]]}}" class="{{['button',(!downloading||downloadError)?'active':'']}}" bindtap="__e">{{''+downloadText+''}}</view></view><block wx:if="{{!updateParams.force}}"><view data-event-opts="{{[['tap',[['back',['$event']]]]]}}" class="bottom" bindtap="__e"><view class="line"></view><image class="close" src="../assets/close.png"></image></view></block></view>